	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Uno.Extensions.Core\Uno.Extensions.Core.csproj" />
		<ProjectReference Include="..\Uno.Extensions.Logging\Uno.Extensions.Logging.csproj" />
		<ProjectReference Include="..\Uno.Extensions.Navigation\Uno.Extensions.Navigation.csproj" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Hosting" Version="6.0.0" />
		<PackageReference Include="Microsoft.Extensions.Logging" Version="6.0.0" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Uno.UI" Version="4.0.0-dev.5645" />
		<PackageReference Include="Uno.Core" Version="4.0.0-dev.7" />
		<PackageReference Include="Uno.Toolkit.UI" Version="0.1.0-dev.152" />
	</ItemGroup>
</Project>
