<Project Sdk="MSBuild.Sdk.Extras" ToolsVersion="15.0">

	<PropertyGroup>
		<TargetFrameworks Condition="'$(UnoTargetFrameworkOverride)'!=''">$(UnoTargetFrameworkOverride)</TargetFrameworks>
		<TargetFrameworks Condition="'$(UnoTargetFrameworkOverride)'==''">netstandard2.0;netstandard2.1;net5.0;xamarinios10;xamarinmac20;monoandroid11.0</TargetFrameworks>
		<TargetFrameworks Condition="'$(UnoTargetFrameworkOverride)'=='' and '$(UnoExtensionsDisableNet6)'==''">$(TargetFrameworks);uap10.0.18362;net6.0;net6.0-ios;net6.0-macos;net6.0-android;net6.0-maccatalyst</TargetFrameworks>

		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<!--<RuntimeIdentifiers>win10-x86;win10-x64;win10-arm64</RuntimeIdentifiers>-->
		<!--Needed to workaround an issue with packaging of the Playground sample Windows app.-->
		<RootNamespace>Uno.Extensions</RootNamespace>
	</PropertyGroup>
	
	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Logging" Version="1.1.0" />
		<PackageReference Include="System.Threading.Tasks.Extensions" Version="4.5.1" />
	</ItemGroup>

	<ItemGroup>
		<None Update="AsyncAction.tt">
			<Generator>TextTemplatingFileGenerator</Generator>
			<LastGenOutput>AsyncAction.cs</LastGenOutput>
		</None>
		<None Update="AsyncFunc.tt">
			<Generator>TextTemplatingFileGenerator</Generator>
			<LastGenOutput>AsyncFunc.cs</LastGenOutput>
		</None>
	</ItemGroup>

	<ItemGroup>
		<Compile Update="AsyncAction.cs">
			<DesignTime>True</DesignTime>
			<AutoGen>True</AutoGen>
			<DependentUpon>AsyncAction.tt</DependentUpon>
		</Compile>
		<Compile Update="AsyncFunc.cs">
			<DesignTime>True</DesignTime>
			<AutoGen>True</AutoGen>
			<DependentUpon>AsyncFunc.tt</DependentUpon>
		</Compile>
	</ItemGroup>

	<ItemGroup>
	  <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
	</ItemGroup>

	<ItemGroup>
		<InternalsVisibleTo Include="Uno.Extensions.Configuration" />
		<InternalsVisibleTo Include="Uno.Extensions.Navigation" />
		<InternalsVisibleTo Include="Uno.Extensions.Navigation.UI" />
		<InternalsVisibleTo Include="Uno.Extensions.Navigation.WinUI" />
		<InternalsVisibleTo Include="Uno.Extensions.Navigation.Toolkit.UI" />
		<InternalsVisibleTo Include="Uno.Extensions.Navigation.Toolkit.WinUI" />
	</ItemGroup>
</Project>
