<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>net5.0-windows10.0.19041.0;uap10.0.16299;netstandard2.0;xamarinios10;xamarinmac20;monoandroid10.0;monoandroid11.0</TargetFrameworks>
 </PropertyGroup>

  <PropertyGroup Condition="'$(IsWinUI)' == 'true'">
    <Platforms>x86;x64;arm64</Platforms>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="7.0.2" />
  </ItemGroup>
  <ItemGroup Condition="'$(IsWinUI)' != 'true' and '$(IsUWP)' != 'true'">
    <PackageReference Include="Uno.WinUI" Version="3.8.0-dev.302" />
  </ItemGroup>
  <ItemGroup Condition="'$(IsWinUI)' == 'true'">
    <PackageReference Include="Microsoft.ProjectReunion" Version="0.5.7" />
  </ItemGroup>
</Project>