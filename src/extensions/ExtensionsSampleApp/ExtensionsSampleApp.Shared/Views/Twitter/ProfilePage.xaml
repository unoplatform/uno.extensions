<Page
    x:Class="ExtensionsSampleApp.Views.Twitter.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ExtensionsSampleApp.Views.Twitter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
      xmlns:nav="using:Uno.Extensions.Navigation.Controls"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Ellipse Fill="Gray"
                     Height="300"
                     Width="300" />
            <TextBlock Text="Fred Bloggs" FontSize="30"/>
            <Button Content="Back"  nav:Navigation.NavigateOnClickRoute="../-"/>
        </StackPanel>
    </Grid>
</Page>
