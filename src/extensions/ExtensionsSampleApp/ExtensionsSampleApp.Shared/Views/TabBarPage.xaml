<Page
    x:Class="ExtensionsSampleApp.Views.TabBarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ExtensionsSampleApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nav="using:Uno.Extensions.Navigation.Controls"
    mc:Ignorable="d"
      xmlns:toolkit="using:Uno.UI.ToolkitLib"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <toolkit:TabBar Background="Tomato" SelectionChanged="TabBar_SelectionChanged">
            <toolkit:TabBar.Items>
                <toolkit:TabBarItem Content="Tab 1"
                                    nav:Navigation.Path="./tabcontent/Content1"
                                    x:Name="TabBar_SelectionIndicator_Tab1" />
                <toolkit:TabBarItem Content="Tab 2"
                                    nav:Navigation.Path="./tabcontent/Content2"
                                    x:Name="TabBar_SelectionIndicator_Tab2" />
            </toolkit:TabBar.Items>
        </toolkit:TabBar>
        <ContentControl nav:Navigation.RegionName="tabcontent" Grid.Row="1"/>
    </Grid>
</Page>
