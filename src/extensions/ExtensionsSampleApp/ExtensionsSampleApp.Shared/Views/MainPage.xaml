<Page x:Class="ExtensionsSampleApp.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:ExtensionsSampleApp"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:nav="using:Uno.Extensions.Navigation.Controls"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBlock Margin="20"
                       FontSize="30"><Run Text="Main - " /><Run Text="{Binding Title}" /></TextBlock>
            <Button Content="Next page - NavigationRequest"
                    nav:Navigation.Path="SecondPage" />
            <Button Content="Next page - NavigateToView"
                    Click="NextPageNavigateToViewClick" />
            <Button Content="Next page - NavigateToViewModel"
                    Click="NextPageNavigateToViewModelClick" />
            <Button Content="Next page - NavigateForData"
                    Click="NextPageNavigateForDataClick" />
            <Button Content="Next page - NavigateToViewModel (MainViewModel)"
                    Command="{Binding NavigateToSecondPageCommand}" />
            <Button Content="Next page - NavigationRequest with response"
                    Click="NextPageRequestResponseClick" />
            <Button Content="Content Dialog"
                    Click="ContentDialogResponseClick" />
        </StackPanel>
    </Grid>
</Page>
