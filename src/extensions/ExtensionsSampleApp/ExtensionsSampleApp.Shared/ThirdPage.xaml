<Page x:Class="ExtensionsSampleApp.ThirdPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:ExtensionsSampleApp"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:nav="using:Uno.Extensions.Navigation.Controls"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <TextBlock Text="Page 3"
                       Margin="20"
                       FontSize="30" />
            <TextBlock x:Name="ParametersText"
                       Margin="20"
                       FontSize="30" Foreground="Red"/>
            <Button Content="Next Page"
                    nav:Navigation.Path="FourthPage" />
            <Button Content="Go to Fourth Page and remove third page - NavigationRequest"
                    nav:Navigation.Path="../FourthPage" />
            <Button Content="Go to Fourth Page and remove second and third page - NavigationRequest"
                    nav:Navigation.Path="../../FourthPage" />
            <Button Content="Go Back - NavigateToPreviousView"
                    nav:Navigation.Path=".." />
        </StackPanel>
    </Grid>
</Page>
