  </ItemGroup>-->

  <PropertyGroup>
    <!-- Forces Uno's XamlFileGenerator to write error when XAML is invalid-->
    <ShouldWriteErrorOnInvalidXaml>True</ShouldWriteErrorOnInvalidXaml>
  </PropertyGroup>

