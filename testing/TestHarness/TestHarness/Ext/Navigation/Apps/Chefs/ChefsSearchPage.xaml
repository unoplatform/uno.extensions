<Page x:Class="TestHarness.Ext.Navigation.Apps.Chefs.ChefsSearchPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:local="using:TestHarness.Ext.Navigation.Apps.Chefs"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:uen="using:Uno.Extensions.Navigation.UI"
	  xmlns:utu="using:Uno.Toolkit.UI"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
	  mc:Ignorable="d">

	<Grid RowDefinitions="Auto, *">
		<utu:NavigationBar Content="Search"
						   AutomationProperties.AutomationId="SearchNavigationBar" />
		<StackPanel Grid.Row="1"
					Spacing="16">
			<TextBlock Text="ChefsSearch" />
			<Button Command="{Binding NavigateToRecipeDetail}"
					AutomationProperties.AutomationId="SearchRecipeDetails"
					Content="Recipe Details" />
			<TextBlock x:Name="TxtUrl"
					   AutomationProperties.AutomationId="ChefsSearchPageTxtUrlFromBrowser" />

			<Button AutomationProperties.AutomationId="ChefsSearchPageGetUrlFromBrowser"
					Click="GetUrlFromBrowser"
					Content="Get URL" />
		</StackPanel>
	</Grid>
</Page>
