					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>
					<StackPanel Orientation="Horizontal">
						<Button Content="Products (threading test)"
								Click="{x:Bind ViewModel.GoToProducts}" />
						<Button Content="Products (clear stack)"
