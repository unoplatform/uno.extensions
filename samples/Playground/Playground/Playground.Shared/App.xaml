<Application
    x:Class="Playground.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Playground">
	
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />

				<!-- Load the Material control resources -->
				<MaterialResourcesV1 xmlns="using:Uno.Material" />
				<ToolkitResources xmlns="using:Uno.Toolkit.UI" />

				<!-- Load Material Toolkit resources -->
				<MaterialToolkitResourcesV1 xmlns="using:Uno.Toolkit.UI.Material" />
				<!-- Place resources here -->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
